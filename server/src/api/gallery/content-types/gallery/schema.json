    "photos": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "videos": {
      "allowedTypes": [
        "files",
        "videos"
      ],
      "type": "media",
      "multiple": true,
      "required": false
